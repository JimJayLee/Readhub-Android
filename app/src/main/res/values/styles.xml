<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!-- App Theme -->

    <style name="BaseAppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/color_primary</item>
        <item name="colorPrimaryDark">@color/color_primary_dark</item>
        <item name="colorAccent">@color/color_accent</item>
        <item name="windowActionModeOverlay">true</item>
        <item name="android:windowBackground">@color/window_background</item>
        <item name="android:listDivider">@color/list_divider</item>
    </style>

    <style name="AppTheme" parent="BaseAppTheme">
        <item name="android:windowDrawsSystemBarBackgrounds">true</item>
        <item name="android:windowContentTransitions">true</item>
    </style>

    <style name="AppTheme.Launch">
        <item name="android:windowTranslucentStatus">true</item>
        <item name="android:windowTranslucentNavigation">true</item>
        <item name="android:windowBackground">@color/color_primary</item>
    </style>

    <!-- App Widget -->

    <style name="AppWidget" parent="Theme.AppCompat.Light" />

    <!-- Deep Line -->

    <style name="AppWidget.DeepLine">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1dp</item>
        <item name="android:background">?android:attr/listDivider</item>
    </style>

    <style name="AppWidget.DeepLine.Vertical">
        <item name="android:layout_width">1dp</item>
        <item name="android:layout_height">match_parent</item>
    </style>

    <!-- Gap -->

    <style name="AppWidget.ItemGap">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">8dp</item>
    </style>

    <!-- Navigation -->

    <style name="AppWidget.NavigationItem">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">48dp</item>
        <item name="android:paddingStart">16dp</item>
        <item name="android:paddingEnd">16dp</item>
        <item name="android:drawablePadding">32dp</item>
        <item name="android:textColor">?android:attr/textColorPrimary</item>
        <item name="android:textSize">14sp</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:background">?attr/selectableItemBackground</item>
    </style>

    <style name="AppWidget.NavigationItemDeepLineGap" parent="AppWidget.DeepLine">
        <item name="android:layout_marginTop">8dp</item>
        <item name="android:layout_marginBottom">8dp</item>
    </style>

    <!-- Button -->

    <style name="AppWidget.BackToTopAndRefreshBtn">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">32dp</item>
        <item name="android:paddingStart">16dp</item>
        <item name="android:paddingEnd">16dp</item>
        <item name="android:drawableStart">@drawable/ic_refresh_theme_18dp</item>
        <item name="android:drawablePadding">8dp</item>
        <item name="android:text">@string/back_to_top_and_refresh</item>
        <item name="android:textColor">?attr/colorAccent</item>
        <item name="android:textSize">12sp</item>
        <item name="android:gravity">center</item>
        <item name="android:background">@drawable/back_to_top_and_refresh_btn_bg</item>
        <item name="android:elevation">@dimen/app_bar_elevation</item>
    </style>

</resources>
